<?xml version="1.0" encoding="UTF-8"?>
<generalAdapterRun xmlns="http://www.wldelft.nl/fews" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/generalAdapterRun.xsd">
	<general>
		<description>FTP Seasonal ensemble forecasts from KNMI NMDC ftp server to local</description>
		<rootDir>%REGION_HOME%/Modules/download_era5</rootDir>
		<workDir>%ROOT_DIR%</workDir>
		<exportDir>%ROOT_DIR%</exportDir>
		<exportDataSetDir>%ROOT_DIR%</exportDataSetDir>
		<importDir>%ROOT_DIR%</importDir>
		<dumpFileDir>$DUMP_FILE_FOLDER$</dumpFileDir>
		<dumpDir>%ROOT_DIR%</dumpDir>
		<diagnosticFile>%ROOT_DIR%/diag.xml</diagnosticFile>
		<time0Format>yyyyMMdd</time0Format>
	</general>
	<activities>
		<startUpActivities>
			<purgeActivity>
				<filter>%ROOT_DIR%/*.*</filter>
			</purgeActivity>
		</startUpActivities>
		<exportActivities>
			<exportDataSetActivity>
				<moduleInstanceId>download_reanalysis_ECMWF_era5</moduleInstanceId>
			</exportDataSetActivity>
		</exportActivities>
		<executeActivities>
			<executeActivity>
				<command>
					<executable>%ROOT_DIR%/download_era5_gloffis.bat</executable>
				</command>
				<arguments>
					<argument>%TIME0%</argument>
					<argument>$IMPORT_FOLDER_WINDOWS$/era5</argument>
					<argument>$_REL_VIEW_PERIOD_START$</argument>
					<argument>$_REL_VIEW_PERIOD_END$</argument>
					<argument>$_COORD_NORTH$</argument>
					<argument>$_COORD_SOUTH$</argument>
					<argument>$_COORD_EAST$</argument>
					<argument>$_COORD_WEST$</argument>
				</arguments>
				<timeOut>10800000</timeOut>
			</executeActivity>
		</executeActivities>
	</activities>
</generalAdapterRun>